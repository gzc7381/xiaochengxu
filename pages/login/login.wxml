<!--pages/login/login.wxml-->
<view class="login-box" hover-class="none" hover-stop-propagation="false">
  <!-- 背景 -->
  <image src='/images/login-bg.jpg' class='png-0' style='width:100%;height:100%'></image>
  <image src='/images/login-bg.jpg' class='png,bg-blur' style='width:100%;height:100%'></image>
  <view class="bgShade"></view>
  <!-- logo -->
  <view class="logo">
    <image src='/images/icon.png' class='icon'></image>
    <text class="title">每天进步一点点</text>
  </view>
  <!-- 登录form -->
  <view class="form  animated  {{isLogin ? 'bounceInRight' :  'disNone  bounceOutLeft'}}">
    <view class="formName">
      <van-field    model:value="{{userName}}" placeholder="{{userPlaceholder}}" center clearable autofocus left-icon="manager-o" bindfocus='userFocus' bindblur='userBlur' ></van-field>
    </view>
    <view class="formPW">
      <van-field  model:value="{{passName}}" placeholder="{{passPlaceholder}}" center clearable autofocus left-icon="bag-o" bindfocus='passFocus' bindblur='passBlur' type='password'></van-field>
    </view>
    <view class="formButten">
      <van-button  color="#8FDCB5" size="normal"  round bindtap="dologin">登   录</van-button>
    </view>
    <view class="formOther">
      <text class='forgetPW'>忘记密码？</text>
      <text class="register"  bindtap="goReg">立即注册！</text>
    </view>

  </view>
  <!-- 注册form -->
  <view class="form2  animated {{isLogin ? 'disNone    bounceOutLeft' : 'bounceInRight'}}">
    <view class="formName">
      <van-field model:value="{{regUserName}}" placeholder="{{regUserPlaceholder}}" center clearable autofocus left-icon="manager-o" bindfocus='regUserFocus' bindblur='regUserBlur'> </van-field>
    </view>
    <view class="verify">
      <van-field  model:value="{{regVerify}}" placeholder="{{regVerUserPlaceholder}}" center clearable autofocus left-icon="envelop-o" bindfocus='regVerUserFocus' bindblur='regVerUserBlur' >
          <van-button  slot="button" size="small" type="primary" round bindtap='sendVerify'>{{verifyButtenText}}</van-button>
      </van-field>
    </view>
    <view class="formPW">
      <van-field  model:value="{{regPassName}}" placeholder="{{regPassPlaceholder}}" center clearable autofocus left-icon="bag-o" bindfocus='regPassFocus' bindblur='regPassBlur' type='password' ></van-field>
    </view>
        <view class="formPWAgn">
      <van-field  model:value="{{regPassNameAgn}}" placeholder="{{regPassPlaceholderAgn}}" center clearable autofocus left-icon="goods-collect-o" bindfocus='regPassFocusAgn' bindblur='regPassBlurAgn' type='password' ></van-field>
    </view>
    <view class="formButten">
      <van-button  color="#EEE671" size="normal"  round bindtap="doReg">注   册</van-button>
    </view>
    
  </view>
  <!-- 其他登录方式 -->
  <view class="otherLog">
    <view class="f-g">
      <van-divider hairline content-position="center" >其他方式登陆</van-divider>
    </view>
    <view class="otherIcon">
      <image src="/images/wxLog.png"></image>
      <image src="/images/QQLog.png"></image>
      <image src="/images/wbLog.png"></image>
    </view>
  </view>
  <view class="backLog  animated {{isLogin ? 'disNone    bounceOutLeft' : 'fadeInLeft'}}" style="top:{{topVal}}px" bindtap='goLogin'>
    <image src='/images/back.png' style="height:{{heightVal}}px; width:{{heightVal+10}}px;"></image>
  </view>
  <van-toast id="van-toast" />
  <van-notify id="van-notify" />
</view>
