<!--pages/home/home.wxml-->
<view class="homeBox" >
<page-meta
  background-text-style="{{bgTextStyle}}"
  background-color="{{bgColor}}"
  background-color-top="{{bgColorTop}}"
  background-color-bottom="{{bgColorBottom}}"
  scroll-top="{{scrollTop}}"
  page-style="color: green"
  root-font-size="16px"
>
  <navigation-bar
    title="{{nbTitle}}"
    loading="{{nbLoading}}"
    front-color="{{nbFrontColor}}"
    background-color="{{nbBackgroundColor}}"
  />
</page-meta>
  <van-tabbar active="{{ active }}" bind:change="onChange"  active-color="#07c160">
    <van-tabbar-item icon="wap-home">首页</van-tabbar-item>
    <van-tabbar-item icon="fire">热点</van-tabbar-item>
    <van-tabbar-item icon="chat" info="5">消息</van-tabbar-item>
    <van-tabbar-item icon="manager">我的</van-tabbar-item>
  </van-tabbar>
  <!-- 首页 -->
  <view class="index">
    <!-- 搜索框 -->
    <van-search  model:value="{{ searchValue }}" placeholder="{{searchHolder}}"  shape="round"  readonly/>
    <!-- 轮播 -->
    <!-- tab栏 -->
    <!-- 内容列表 -->
  </view>
</view>
